@model HPCN.UnionOnline.Site.ViewModels.ProductAddViewModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add a product</h2>

<form asp-action="Add" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PointsPayment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PointsPayment" class="form-control" />
                <span asp-validation-for="PointsPayment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SelfPayment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SelfPayment" class="form-control" />
                <span asp-validation-for="SelfPayment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Picture" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" asp-for="Picture" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
