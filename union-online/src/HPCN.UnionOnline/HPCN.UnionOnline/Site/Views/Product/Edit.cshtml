@model HPCN.UnionOnline.Site.ViewModels.ProductEditViewModel

    @{
        ViewData["Title"] = "Edit";
    }

    <h2>Edit product</h2>

    <hr />
    <div>
        <img class="product-picture-edit" src="~/pictures/product/@Model.PictureFileName" alt="@Model.PictureFileName" />
    </div>
    <div class="form-horizontal">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PointsPayment" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="PointsPayment" class="form-control" />
                    <span asp-validation-for="PointsPayment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SelfPayment" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SelfPayment" class="form-control" />
                    <span asp-validation-for="SelfPayment" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="form-control description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Picture" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="file" asp-for="Picture" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PictureFileName" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
