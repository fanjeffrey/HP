@model IEnumerable<HPCN.UnionOnline.Models.Product>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PointsPayment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SelfPayment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PictureFileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
{
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PointsPayment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SelfPayment)
                    </td>
                    <td>
                        <img class="product-picture-list" src="pictures/product/@item.PictureFileName" alt="@item.PictureFileName" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |                        
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
}
        </tbody>
    </table>
