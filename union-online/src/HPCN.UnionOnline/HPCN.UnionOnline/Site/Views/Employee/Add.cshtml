@model HPCN.UnionOnline.Site.ViewModels.EmployeeAddViewModel
@inject IOptionsService _optionsService

@{
    ViewData["Title"] = "Create";
}

<h2>Add Employee</h2>
<hr />

<form asp-action="Add">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="No" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="No" class="form-control" />
                <span asp-validation-for="No" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ChineseName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ChineseName" class="form-control" />
                <span asp-validation-for="ChineseName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DisplayName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OnboardDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OnboardDate" class="form-control" />
                <span asp-validation-for="OnboardDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("Gender", _optionsService.ListGender().Select(g => new SelectListItem() { Text = g.ToString(), Value = g.ToString() }), new { @class = "form-control" })
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ManagerEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ManagerEmail" class="form-control" />
                <span asp-validation-for="ManagerEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TeamAdminAssistant" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TeamAdminAssistant" class="form-control" />
                <span asp-validation-for="TeamAdminAssistant" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdCardNo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IdCardNo" class="form-control" />
                <span asp-validation-for="IdCardNo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BaseCity" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="BaseCity" class="form-control" />
                <span asp-validation-for="BaseCity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WorkCity" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="WorkCity" class="form-control" />
                <span asp-validation-for="WorkCity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CostCenter" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CostCenter" class="form-control" />
                <span asp-validation-for="CostCenter" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmployeeType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @*<select asp-for="EmployeeType" class="form-control"></select>*@
                @Html.DropDownList("EmployeeType", _optionsService.ListEmployeeTypes().Select(g => new SelectListItem() { Text = g.ToString(), Value = g.ToString() }), new { @class = "form-control" })
                <span asp-validation-for="EmployeeType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
